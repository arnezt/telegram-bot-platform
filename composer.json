{
    "name": "jungle-bay/telegram-bot-platform",
    "description": "PHP Library for Telegram Bot Platform",
    "type": "library",
    "keywords": [
        "php",
        "php-library",
        "telegram",
        "telegram-bot",
        "telegram-bot-platform"
    ],
    "homepage": "https://github.com/jungle-bay/telegram-bot-platform",
    "license": "MIT",
    "authors": [
        {
            "name": "Roma Baranenko",
            "email": "jungle.romabb8@gmail.com",
            "role": "Lead Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/jungle-bay/telegram-bot-platform/issues/"
    },
    "require": {
        "php": ">=5.5.0",
        "jungle-bay/telegram-bot-api": "^3.5.2",
        "matthiasmullie/scrapbook": "^1.4.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8.36"
    },
    "autoload": {
        "psr-4": {
            "TelegramBotPlatform\\": "src/TelegramBotPlatform/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TelegramBotPlatform\\Tests\\": "tests/TelegramBotPlatform/Tests/"
        }
    },
    "scripts": {
        "test": "phpunit --bootstrap vendor/autoload.php --filter",
        "tests": "phpunit --bootstrap vendor/autoload.php tests"
    },
    "archive": {
        "exclude": [
            "*",
            ".*",
            "!src/*",
            "!composer.json"
        ]
    }
}
